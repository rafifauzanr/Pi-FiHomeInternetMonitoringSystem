<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:paddingBottom="80dp"
    tools:context=".DevicesFragment">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“±ðŸ’» Devices"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:gravity="center"
        android:paddingBottom="16dp" />

    <!-- Devices ScrollView -->
    <ScrollView
        android:id="@+id/devices_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/box_outline_blue"
        android:padding="8dp">

        <TextView
            android:id="@+id/devices_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="Loading device connections..."
            android:textColor="@color/black"
            android:textSize="11sp"
            android:textIsSelectable="true" />

    </ScrollView>

</LinearLayout>